<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
        <link rel="stylesheet" href="{{ asset('css/styles.css') }}">
        {#
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>

     <nav class="navbar navbar-expand-lg navbar-light bg-light">
  <a class="navbar-brand" href="#">Navbar</a>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item active">
        <a class="nav-link" href="{{path('app_home')}}">Home</a>
      </li>
      <li class="nav-item active">
        <a class="nav-link" href="{{path('app_jeu')}}">jeu</a>
      </li>
      {% if is_granted('ROLE_USER')==false %}
      <li class="nav-item active">
        <a class="nav-link" href="{{path('app_login')}}">login</a>
      </li>
      {% endif %}
      <li class="nav-item active">
        <a class="nav-link" href="{{path('app_logout')}}">logout</a>
      </li>
      <li class="nav-item active">
        <a class="nav-link" href="{{path('app_register')}}">register</a>
      </li>
      <li class="nav-item active">
        <a class="nav-link" href="{{path('app_user_index')}}">voir users</a>
      </li>
      <li class="nav-item active">
        <a class="nav-link" href="{{path('app_produit_index')}}">voir produits</a>
      </li>
      {% if is_granted('ROLE_ADMIN') %}
      <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="{{ path('app_user_index') }}" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                Gestion des Produits
            </a>
            <ul class="dropdown-menu">
                <li><a class="dropdown-item" href="{{ path('app_admin_produit_index') }}">Voir les produits</a></li>
                <li><a class="dropdown-item" href="{{ path('app_admin_produit_new') }}">New produit</a></li>
             </ul>
            </li>
            {% endif %}
    </ul>
  </div>
</nav>

        {% block body %}{% endblock %}
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous"></script>

    </body>
</html>
